{
  "name": "piggy-chat",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "esbuild": "bash _script/esbuild.sh",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=local nest start",
    "start:dev": "NODE_ENV=local nest start --watch",
    "start:debug": "NODE_ENV=local nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:lambda": "bash _script/start.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "serve:lambda": "yarn build && yarn esbuild && yarn start:lambda",
    "deploy": "yarn build && yarn esbuild && bash _script/deploy.sh"
  },
  "dependencies": {
    "@nestjs/common": "8.4.7",
    "@nestjs/core": "8.4.7",
    "@nestjs/platform-express": "8.4.7",
    "@vendia/serverless-express": "4.8.2",
    "aws-lambda": "1.0.7",
    "axios": "0.24.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "dayjs": "1.11.3",
    "esbuild": "0.14.46",
    "helmet": "4.6.0",
    "jsonwebtoken": "8.5.1",
    "jwks-rsa": "2.0.5",
    "lodash": "4.17.21",
    "mongoose": "6.4.1",
    "morgan": "1.10.0",
    "multer-s3": "2.10.0",
    "ramda": "0.28.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "8.2.8",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@types/aws-lambda": "8.10.100",
    "@types/aws-sdk": "2.7.0",
    "@types/express": "4.17.3",
    "@types/jest": "26.0.10",
    "@types/jsonwebtoken": "8.5.6",
    "@types/mongoose": "5.11.97",
    "@types/morgan": "1.9.3",
    "@types/multer-s3": "2.7.11",
    "@types/node": "18.0.0",
    "@types/ramda": "0.28.14",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-plugin-import": "2.26.0",
    "jest": "26.4.2",
    "prettier": "1.19.1",
    "serverless-offline": "8.8.0",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "9.3.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "src/controller"
    ]
  }
}
